@page "/"
@using GeoTrack.WEB.Shared
@using Microsoft.AspNetCore.Authorization
@inject NavigationManager NavigationManager
@attribute [Authorize]

<!-- =========================================================
     Página de bienvenida GeoTrack
     Muestra tarjetas de acceso rápido a Países, Departamentos
     y Ciudades.
========================================================= -->

<div class="welcome-container">
    <div class="welcome-content text-center">
        <img src="/images/logo.png" alt="GeoTrack Logo" class="welcome-logo mb-4" />

        <h1 class="display-4 mb-1">Bienvenido a GeoTrack</h1>
        <p class="lead mb-5">
            Sistema para la gestión de ubicaciones geográficas
        </p>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="row g-4">

                    <!-- ────────────────────────────────
                         Tarjeta: Países
                    ──────────────────────────────── -->
                    <div class="col-md-4">
                        <div class="card h-100 welcome-card"
                             @onclick='@(() => NavigationManager.NavigateTo("/paises"))'>
                            <div class="card-body text-center">
                                <i class="bi bi-globe welcome-icon mb-3"></i>
                                <h5 class="card-title">Países</h5>
                                <p class="card-text">Gestión de países</p>
                            </div>
                        </div>
                    </div>

                    <!-- ────────────────────────────────
                         Tarjeta: Departamentos
                    ──────────────────────────────── -->
                    <div class="col-md-4">
                        <div class="card h-100 welcome-card"
                             @onclick='@(() => NavigationManager.NavigateTo("/departamentos"))'>
                            <div class="card-body text-center">
                                <i class="bi bi-map welcome-icon mb-3"></i>
                                <h5 class="card-title">Departamentos</h5>
                                <p class="card-text">Gestión de departamentos</p>
                            </div>
                        </div>
                    </div>

                    <!-- ────────────────────────────────
                         Tarjeta: Ciudades
                    ──────────────────────────────── -->
                    <div class="col-md-4">
                        <div class="card h-100 welcome-card"
                             @onclick='@(() => NavigationManager.NavigateTo("/ciudades"))'>
                            <div class="card-body text-center">
                                <i class="bi bi-building welcome-icon mb-3"></i>
                                <h5 class="card-title">Ciudades</h5>
                                <p class="card-text">Gestión de ciudades</p>
                            </div>
                        </div>
                    </div>

                </div> <!-- /row g-4 -->
            </div>     <!-- /col-md-8 -->
        </div>         <!-- /row justify-content-center -->
    </div>             <!-- /welcome-content -->
</div>                 <!-- /welcome-container -->

@* ===========================================================
   Estilos rápidos (puedes moverlos a un .css si prefieres)
=========================================================== *@
<style>
    .welcome-container {
        margin-top: 4rem;
    }

    .welcome-logo {
        max-width: 160px;
    }

    .welcome-card {
        cursor: pointer;
        transition: transform .15s ease-in-out;
    }

        .welcome-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

    .welcome-icon {
        font-size: 3rem;
    }
</style>
