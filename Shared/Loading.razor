@if (Visible)
{
    <div class="loading-container @(FullPage ? "loading-fullpage" : "")">
        <div class="loading-content">
            <div class="spinner-border text-primary" role="status"></div>
            <div class="loading-text mt-2">@Mensaje</div>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool Visible { get; set; }

    [Parameter]
    public bool FullPage { get; set; } = true;

    [Parameter]
    public string Mensaje { get; set; } = "Cargando...";
}

<style>
    .loading-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 1rem;
    }

    .loading-fullpage {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(255, 255, 255, 0.8);
        z-index: 9999;
    }

    .loading-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: white;
        padding: 1.5rem;
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .loading-text {
        font-size: 1rem;
        color: #6c757d;
    }
</style>