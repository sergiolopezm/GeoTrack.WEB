@inject NavigationManager NavigationManager
@using GeoTrack.WEB.Services.Interface
@inject IAuthService AuthService

<div class="sidebar @(_minimized ? "minimized" : "")">
    <div class="sidebar-header">
        <div class="logo d-flex align-items-center">
            <img src="/images/logo.png" alt="GeoTrack Logo" class="logo-img" />
            @if (!_minimized)
            {
                <h3 class="ms-2 mb-0">GeoTrack</h3>
            }
        </div>
        <button class="btn-toggle" @onclick="ToggleSidebar">
            <i class="bi bi-chevron-@(_minimized ? "right" : "left")"></i>
        </button>
    </div>

    <div class="sidebar-menu">
        <NavLink class="sidebar-item" href="" Match="NavLinkMatch.All">
            <i class="bi bi-house-door"></i>
            @if (!_minimized)
            {
                <span>Inicio</span>
            }
        </NavLink>

        <NavLink class="sidebar-item" href="dashboard">
            <i class="bi bi-graph-up"></i>
            @if (!_minimized)
            {
                <span>Dashboard</span>
            }
        </NavLink>

        <div class="sidebar-section">
            @if (!_minimized)
            {
                <span class="sidebar-section-title">Ubicaciones</span>
            }
            else
            {
                <hr class="my-2" />
            }

            <NavLink class="sidebar-item" href="paises">
                <i class="bi bi-globe"></i>
                @if (!_minimized)
                {
                    <span>Países</span>
                }
            </NavLink>

            <NavLink class="sidebar-item" href="departamentos">
                <i class="bi bi-map"></i>
                @if (!_minimized)
                {
                    <span>Departamentos</span>
                }
            </NavLink>

            <NavLink class="sidebar-item" href="ciudades">
                <i class="bi bi-building"></i>
                @if (!_minimized)
                {
                    <span>Ciudades</span>
                }
            </NavLink>
        </div>

        <div class="sidebar-section">
            @if (!_minimized)
            {
                <span class="sidebar-section-title">Cuenta</span>
            }
            else
            {
                <hr class="my-2" />
            }

            <NavLink class="sidebar-item" href="profile">
                <i class="bi bi-person"></i>
                @if (!_minimized)
                {
                    <span>Mi Perfil</span>
                }
            </NavLink>

            <AuthorizeView Roles="Administrador">
                <NavLink class="sidebar-item" href="register">
                    <i class="bi bi-person-plus"></i>
                    @if (!_minimized)
                    {
                        <span>Registrar Usuario</span>
                    }
                </NavLink>
            </AuthorizeView>

            <div class="sidebar-item" @onclick="LogoutAsync">
                <i class="bi bi-box-arrow-right"></i>
                @if (!_minimized)
                {
                    <span>Cerrar Sesión</span>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private bool _minimized = false;

    private void ToggleSidebar()
    {
        _minimized = !_minimized;
    }

    private async Task LogoutAsync()
    {
        await AuthService.LogoutAsync();
        NavigationManager.NavigateTo("/login");
    }
}

<style>
    .sidebar {
        width: 250px;
        height: 100vh;
        background-color: #2c3e50;
        color: white;
        transition: all 0.3s;
        display: flex;
        flex-direction: column;
        position: fixed;
        left: 0;
        top: 0;
        z-index: 100;
    }

    .sidebar.minimized {
        width: 70px;
    }

    .sidebar-header {
        padding: 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .logo-img {
        width: 40px;
        height: 40px;
    }

    .btn-toggle {
        background: transparent;
        border: none;
        color: white;
        cursor: pointer;
    }

    .sidebar-menu {
        padding: 1rem 0;
        flex-grow: 1;
        overflow-y: auto;
    }

    .sidebar-item {
        padding: 0.75rem 1rem;
        display: flex;
        align-items: center;
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        transition: all 0.3s;
        cursor: pointer;
    }

    .sidebar-item:hover, .sidebar-item.active {
        background-color: rgba(255, 255, 255, 0.1);
        color: white;
    }

    .sidebar-item i {
        margin-right: 0.75rem;
        font-size: 1.1rem;
        width: 20px;
        text-align: center;
    }

    .sidebar.minimized .sidebar-item i {
        margin-right: 0;
    }

    .sidebar-section {
        margin-top: 1rem;
    }

    .sidebar-section-title {
        padding: 0.5rem 1rem;
        font-size: 0.8rem;
        text-transform: uppercase;
        color: rgba(255, 255, 255, 0.6);
        letter-spacing: 1px;
        display: block;
    }
</style>