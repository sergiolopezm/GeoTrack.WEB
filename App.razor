@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Authorization
@using GeoTrack.WEB.Shared

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                @* <NotAuthorized>
                    @if (context.User.Identity?.IsAuthenticated != true)
                    {
                        <RedirectToLogin />
                    }
                    else
                    {
                        <div class="container mt-5">
                            <div class="alert alert-danger">
                                <h4 class="alert-heading">Acceso denegado</h4>
                                <p>No tiene permisos para acceder a esta página.</p>
                                <hr>
                                <p class="mb-0">Por favor, contacte al administrador si cree que esto es un error.</p>
                            </div>
                        </div>
                    }
                </NotAuthorized> *@
                <NotAuthorized>
                    <RedirectToLogin />
                </NotAuthorized>
                <Authorizing>
                    <div class="d-flex justify-content-center align-items-center min-vh-100">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Verificando permisos...</span>
                        </div>
                    </div>
                </Authorizing>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>No encontrado</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <div class="container mt-5 text-center">
                    <div class="not-found py-5">
                        <i class="bi bi-question-circle-fill display-1 text-muted mb-3"></i>
                        <h1 class="display-4">404</h1>
                        <h2 class="mb-4">Página no encontrada</h2>
                        <p class="lead mb-4">Lo sentimos, la página que busca no existe o ha sido removida.</p>
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house-door me-2"></i>Volver al inicio
                        </a>
                    </div>
                </div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {
    public class RedirectToLogin : ComponentBase
    {
        [Inject]
        private NavigationManager NavigationManager { get; set; } = null!;

        protected override void OnInitialized()
        {
            NavigationManager.NavigateTo("/auth/login", forceLoad: true);

        }
    }
}
